{
  "name": "task-runner",
  "version": "0.0.1",
  "description": "一个基于 typescript 编写的轻量化的任务调度器",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/types/index.d.ts",
  "type": "commonjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky",
    "clean": "rm -rf dist",
    "build": "npm run clean && rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "prepublishOnly": "npm run build && npm test",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "ci-check": "npm run lint && npm run type-check"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.21.0",
    "@rollup/plugin-typescript": "^11.1.0",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^29.5.12",
    "commitlint": "^19.7.1",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "rollup": "^4.9.6",
    "ts-jest": "^29.1.2",
    "tslib": "^2.6.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/richardchen85/task-runner.git"
  },
  "keywords": [
    "task runner"
  ],
  "author": "richard chen",
  "license": "MIT"
}
